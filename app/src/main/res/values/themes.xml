<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelCharacters" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/trans</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:widgetLayout">@style/Theme.MarvelCharacters.Widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.MarvelCharacters.Widget</item>

    </style>

    <style name="Theme.MarvelCharacters.Widget" parent="Theme.MarvelCharacters">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="Theme.MarvelCharacters.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="Theme.MarvelCharacters.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ShapeAppearance.MarvelCharacters.Button.Add" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="backgroundColor">@color/red_dark</item>
    </style>
    <style name="MySearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_characters</item>
        <item name="android:text">@string/search_characters</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

</resources>